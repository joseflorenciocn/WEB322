<div class="row">
    <div class="col-md-12">
        {{#each departments}}
        <h2>{{ departmentName}} - Department: {{  departmentId}}</h2>
        <hr />
        <form method="post" action="/department/update">
            <fieldset>
                <input class="form-control" id="departmentId" name="departmentId" type="hidden" value={{ departmentId}} />
                <legend>Department Name</legend>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label for="departmentName">Department Name:</label>
                            <input class="form-control" id="departmentName" name="departmentName" type="text" value="{{ departmentName}}" />
                        </div>
                    </div>
                </div>
            </fieldset>
            <hr />
            <input type="submit" class="btn btn-primary pull-right" value="Update Department" /><br /><br /><br />
        </form>
        {{else}}
            <div class="col-md-12 text-center">
            <strong>No Department Available</strong>
            </div>
        {{/each}}
    </div>
</div>
 
