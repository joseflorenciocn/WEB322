<div class="row">
    <div class="col-md-12">
        <h2><a href="/department/add" class="btn btn-success pull-right">Add New Department</a>Departments</h2>
        <hr />
        <div class="table-responsive">
            <table class="table ">
                <thead>
                    <tr>
                        <th>Department Number</th>
                        <th>Department Name</th>
                    </tr>
                </thead>
                <tbody>
                {{#each departments}}
                    <tr>
                        <td><a href="/employees?department={{departmentId}}">{{departmentId}}</a></td>
                        <td><a href="/department/{{departmentId}}">{{departmentName}}</a></td>          
                    </tr>
                {{else}}
                    <div class="col-md-12 text-center">
                    <strong>No Departments Available</strong>
                    </div>
                {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>